<main class="container h-100 mt-5">
    <div class="row h-100 justify-content-center align-items-center">
        <div class="container w-50">
            <h1 class="text-white">Log-in</h1>
            <p class="text-white">No account? <a class="text-blue" href="/signup">Create one!</a></p>
            <form class="mt-4 text-white">
                <div class="form-group">
                    <label>Email</label>
                    <input type="text" class="form-control" id="emailVal">
                </div>
                <div class="form-group">
                    <label>Password</label>
                    <input type="password" class="form-control" id="passwordVal">
                </div>
                <button type="submit" class="btn custom-loginbtn" id="loginBtn">Submit</button>
            </form>
        </div>
    </div>

 <button class="btn custom-btn text-light mx-2 my-2 my-sm-0" role="button" id="myCheck" type="button" class="btn btn-primary" data-toggle="modal" data-target="#exampleModal"></button>
    <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
      <div class="modal-dialog" role="document">
        <div class="modal-content bg-black techFont whiteText content_center border-light p-3">
            Email or Password is Incorrect. Please try again.
        </div>
      </div>
    </div>
</main>

