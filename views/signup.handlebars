<main class="container h-100">
    <div class="row h-100 justify-content-center align-items-center">
        <div class="container w-50">
            <h1 class="text-white">Sign Up</h1>
            <p class="text-white">Already have an account? <a href="/login">Sign in!</a></p>
            <form class="mt-4 text-white">
                <div class="form-group">
                    <label>Name</label>
                    <input type="text" class="form-control" id="nameVal">
                </div>
                <div class="form-group">
                    <label>Email</label>
                    <input type="text" class="form-control" id="emailVal">
                </div>
                <div class="form-group">
                    <label>Password</label>
                    <input type="password" class="form-control" id="passwordVal">
                </div>
                <button type="submit" class="btn custom-loginbtn">Next</button>
            </form>
        </div>
    </div>
</main>